# Frontend environment variables
# These values are injected into window.__ENV__ via js/1_config.js.
# Copy this file to .env (or update 1_config.js directly) before running the app.

# ── Supabase ──────────────────────────────────────────────────────────────────
# Project URL shown in Supabase dashboard → Settings → API
SUPABASE_PROJECT_URL=https://<project-ref>.supabase.co

# Anon (public) key – safe to expose in the browser
SUPABASE_ANON_KEY=your-anon-key

# ── Backend API ───────────────────────────────────────────────────────────────
# Base URL for the FastAPI backend.
# Set to http://localhost:8000 for local development.
API_BASE=https://api.yourdomain.com
